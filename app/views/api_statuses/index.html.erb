<div class="header">
  <div>
  <nav class="navbar">
    <a class="navbar-brand">Tray</a>
      <button class="btn btn-outline-success" type="submit">logout</button>
  </nav>
  <div class="search">
    <select class="form-select">
      <option selected>select an API</option>
      <option value="1">Twillio</option>
      <option value="2">Github</option>
      <option value="3">Google Maps</option>
    </select>
    <input type="submit" value="search">
    <%= link_to "Update All", update_all_apis_path %>
  </div>
</div>
</div>

  <div class ="container">
    <div style="background:#F1DABF; padding: 15px; box-shadow: 1px 1px 2px #000; margin: 12px; height: 600px">
      <p><i class="fab fa-artstation"></i>Dashboard</p>
      <p><i class="far fa-user-circle"></i>User Profile</p>
      <p><i class="far fa-circle"></i><%= link_to "API collection", class: "api_color" %></p>
  </div>


<div class="container2">
  <div class="usps d-flex justify-content-around">
    <div class="usp">
      <h3>Sunset API</h3>
      <% if @sunset_apis.nil? %>
        <p>No APIs in sunset period</p>
      <% else %>
        <% @sunset_apis.each do |sun| %>
          <p><%= sun.name.capitalize %> | <%= sun.sunset_date %></p>
          <%= link_to "Update #{sun.name}", api_status_jobs_path(sun.id) %>
        <% end %>
      <% end %>
    </div>
    <div class="usp">
      <h3>Deprecated API</h3>
      <% if @deprecated_apis.nil? %>
        <p>No APIs deprecated</p>
      <% else %>
        <% @deprecated_apis.each do |dep| %>
          <p><%= dep.name.capitalize %></p>
          <%= link_to "Update #{dep.name}", api_status_jobs_path(dep.id) %>
        <% end %>
      <% end %>
    </div>
    <div class="usp">
      <h3>Functioniong APIs</h3>
      <% @apis.each do |api| %>
        <p><%= api.name.capitalize %></p>
        <%= link_to "Update #{api.name}", api_status_jobs_path(api.id) %>
      <% end %>
      <hr class="bar"></hr>
    </div>
  </div>
</div>
</div>

<footer class="footer mt-auto py-3 bg-light">
  <div class="container1">
    <span style="color: #fff;">Done BY Michael Alec Ayan Thanoja </span>
  </div>
</footer>
